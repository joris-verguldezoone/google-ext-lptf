{
    "manifest_version": 3,
    "name": "Changer Couleur",
    "version": "1.0",
    "description": "Change la couleur des variables globales css",
    "permissions": ["activeTab", "scripting","storage"],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "css": ["site.css"],
          "js": ["popup.js"],
          "html":["popup.html"]
        }
      ]
}
